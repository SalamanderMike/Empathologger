<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4">
      <h2><%= @eblog.title %></h2>
      <p>
        <%= @eblog.content %>
      </p>
    </div>
  </div>
  <%= form_for [@eblog, @comment] do |f| %>
    <%= f.text_field :title, class: "form-control",  placeholder: "Comment Title" %><br>
    <%= f.text_area :body, class: "form-control",  placeholder: "Comment" %> <br>
    <%= f.submit "Save Comment", class: "btn btn-primary"%>
  <% end %>
</div>

